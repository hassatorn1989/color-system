datasource db {
  provider = "mysql" // หรือ postgresql
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
  output   = "../lib/generated/prisma"
}

model Pattern {
  id         String    @id @default(uuid())
  name       String
  file_name  String
  file_path  String
  created_by String
  updated_by String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  @@map("pattern")
}

model GroupColor {
  id         String    @id @default(uuid())
  name       String
  is_active  Boolean   @default(true)
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  @@map("group_color")
}

model Color {
  id             String    @id @default(uuid())
  group_color_id String    
  priority        Int
  color          String
  is_active      Boolean   @default(true)
  created_by     String    
  updated_by     String
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
  deleted_at     DateTime?

  @@map("color")
}
